  <% layout("/layouts/boilerplate") -%>
 <h3>All Listings</h3>

     <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
          <% for(let listing of allListings) { %>
            <div class="col mb-4">
              <a href="/listing/<%= listing._id %>" class="listing-link">
                <div class="card h-100">
                  <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height:18rem"/>
                  <div class="card-img-overlay red-heart"> &#10084;</div>
                  <div class="card-body">
                    <p class="card-text">
                      <b><%= listing.title %></b><br>
                      &#8377;<%= listing.price != null && listing.price != undefined ? listing.price.toLocaleString("en-IN") : "Price not available" %>/night
                    </p>
                  </div>
                </div>
              </a>
            </div>
          <% } %>
        </div>
        