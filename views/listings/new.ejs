  <% layout("/layouts/boilerplate") %>

     <div class="row mt-3">
        <div class="col-8 offset-2">

    <br>
         <h3> Create a New Listing</h3>
     <form method ="POST" action="/listings" novalidate class="needs-validation">

      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control"
        required>

        <div class="invalid-feedback">enter the title name</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
            name="listing[description]"
            class="form-control"
            id="description"
            required>
        </textarea>
       
        <div class="invalid-feedback">Please enter the description</div>
    </div>
    
       
      
     <div class="mb-3">
        <lable for="image" class="form-label">Image Link</lable>
        <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control"
        required>
        

        <div class="invalid-feedback"> Please enter the image</div>
     </div>

      <div class="row">
      <div class="mb-3 col-md-4"> 
        <lable for="price" class="form-label">Price</lable>
        <input name="listing[price]" placeholder="enter price" type="number" class="form-control"
        required>

        
        <div class="invalid-feedback">Enter a valid price</div>
      </div>

      <div class="mb-3 col-md-8">
        <lable for="country" class="form-label">Country</lable>
        <input name="listing[country]" placeholder="enter country" type="text" class="form-control"
        required>

        <div class="invalid-feedback">Country name should be valid</div>
      </div>
    </div>

       <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input name="listing[Location]" placeholder="enter location" type="text" class="form-control"
        required>

        <div class="invalid-feedback">Location should be valid</div>
       </div>
   
          <button class="btn btn-dark mt-3 ">Add</button>
      </form>
    
     
    </div>
    </div>
   
